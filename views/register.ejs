<div class="container">
  <div class="row header justify-content-center">
    <div class="col-xs-12 col-md-8 col-sm-12">
      <img src="https://test-bucket5643.s3.amazonaws.com/assets/logo.png" class="img-fluid">
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-6 login-jumbo p-4">
      <h3 class="text-center">Register</h3>
      <br>
      <% include ./partials/messages %>
      <form id="registrationForm" action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" aria-describedby="Enter Full Name"
            placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" id="email" name="email" class="form-control" aria-describedby="Enter E-mail"
            placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" id="password" name="password" aria-describedby="Enter Password min 6 characters"
            class="form-control" placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary button-stone">Create Account</button>
        <br><br>
      </form>
    </div>
  </div>
</div>
</div>