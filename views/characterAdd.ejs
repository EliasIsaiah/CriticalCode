              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
            </div>
          </div>
        </div>

        <!--##################### Skills Section #####################-->
        <div class="form-group row top-div p-2">
          <!--Head-->
          <div class="col-md-2"></div>
          <div class="col-md-8">
            <div class="row">
              <div class="col col-md-12">
                <br>
                <h3>Skills</h3><br>
              </div>
            </div>
            <!--Skills-->
            <div class="row">
              <div class="col col-md-6">
                <div>
                  <div id="acrobatics" class="underline">Acrobatics</div>
                  <input id="acrobaticsCheck" type="checkbox">
                  <input id="acrobaticsInput" type="number">
                </div>

                <div>
                  <div id="animalHandling" class="underline">Animal Handling</div>
                  <input id="animalHandlingCheck" type="checkbox">
                  <input id="animalHInput" type="number">
                </div>

                <div>
                  <div id="arcana" class="underline">Arcana</div>
                  <input id="arcanaCheck" type="checkbox">
                  <input id="arcanaInput" type="number">
                </div>

                <div>
                  <div id="athletics" class="underline">Athletics</div>
                  <input id="athleticsCheck" type="checkbox">
