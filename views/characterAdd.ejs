<div data-user="<%=user%>" id="userInfo"></div>
<!--Keep the data-user in this container need for suppling database-->

<div class="container">
  <!--Header -->
  <div class=" row header justify-content-center">
      <div class="col col-md-2"></div>
      <div class="col-md-7">
          <img src="/assets/images/logo.png" alt="" class="logo">
      </div>
      <div class="col col-md-3 text-md-right text-sm-center">
          <ul id="menu" class="list-group">
              <li class="list-group-item button-stone mt-2 mb-1 pl-0 pr-0 ml-0 text-center"><button type="submit" id="dashboard"
                      class="btn btnText">Dashboard</button></li>
              <li class="list-group-item button-stone mt-2 mb-1 text-center"><button type="submit" id="logout"
                      class="btn text-center btnText">Logout</button></li>
          </ul>
      </div>
  </div>

  <!--- Form Group for Character Name -->
  <div class="row stats-div">
    <form id="characterAddMasterForm">
      <div class="form-group">
        <!--#####################Character Name Start#####################-->
        <div class="form-group row  top-div p-2">
          <div class="col-md-2"> </div>
          <div class="col col-sm-6 col-md-2">
            <img src="/assets/images/default.png" alt="" class="imgLogo">
          </div>
          <div class="col col-sm-6 col-md-6 text-center align-middle">
            <h3>Character Name</h3>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">Input Name</span>
              </div>
              <textarea id="characterNameInput" class="form-control" aria-label="With textarea"></textarea>
              <div class="input-group-append">
                <button class="btn btn-warning" type="button" id="randomNameBtn">Randomize</button>
              </div>
            </div>
          </div>
        </div>
        <!--#####################Character Information Start#####################-->
        <div class="form-group row top-div p-2" >
          <div class="col col-md-9 ">
            <div class="row">
              <div class="col col-md-3">
                <div><span id="className"></span></div>Class
              </div>

              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="classSelect">Classes</label>
                </div>
                <select class="custom-select" id="classSelect">
                  <option selected>Choose...</option>
                  <!-- ["Barbarian","Bard","Cleric","Druid","Fighter","Monk","Paladin","Ranger","Rogue","Sorcerer","Warlock","Wizard"] -->
                  <option value="Barbarian">Barbarian</option>
                  <option value="Bard">Bard</option>
                  <option value="Cleric">Cleric</option>
                  <option value="Druid">Druid</option>
                  <option value="Fighter">Fighter</option>
                  <option value="Monk">Monk</option>
                  <option value="Paladin">Paladin</option>
                  <option value="Ranger">Ranger</option>
                  <option value="Rogue">Rogue</option>
                  <option value="Sorcerer">Sorcerer</option>
                  <option value="Warlock">Warlock</option>
                  <option value="Wizard">Wizard</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col col-md-3">
                <div><span id="race"></span></div>Race
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="raceSelect">Races</label>
                </div>
                <select class="custom-select" id="raceSelect">
                  <option selected>Choose...</option>
                  <!-- ["Dwarf","Elf","Halfling","Human","Dragonborn","Gnome","Half-Elf","Half-Orc","Tiefling"] -->
                  <option value="Dragonborn">Dragonborn</option>
                  <option value="Dwarf">Dwarf</option>
                  <option value="Elf">Elf</option>
                  <option value="Gnome">Gnome</option>
                  <option value="Halfling">Halfling</option>
                  <option value="Half-Elf">Half-Elf</option>
                  <option value="Half-Orc">Half-Orc</option>
                  <option value="Human">Human</option>
                  <option value="Tiefling">Tiefling</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col col-md-3">
                <div><span id="alignment"></span></div>Alignment
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="alignmentSelect">Options</label>
                </div>
                <select class="custom-select" id="alignmentSelect">
                  <option selected>Choose...</option>
                  <!-- ["Lawful Good","Neutral Good","Chaotic Good","Lawful Neutral","Neutral","Chaotic Neutral","Lawful Evil","Neutral Evil","Chaotic Evil"] -->
                  <option value="Lawful-Good">Lawful-Good</option>
                  <option value="Neutral-Good">Neutral-Good</option>
                  <option value="Chaotic-Good">Chaotic-Good</option>
                  <option value="Lawful-Neutral">Lawful-Neutral</option>
                  <option value="Neutral">Neutral</option>
                  <option value="Chaotic-Neutral">Chaotic-Neutral</option>
                  <option value="Lawful-Evil">Lawful-Evil</option>
                  <option value="Neutral-Evil">Neutral-Evil</option>
                  <option value="Chaotic-Evil">Chaotic-Evil</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col col-md-6">
                <div class="row">
                  Faction:
                </div>
                <div class="row">
                  <input id="factionInput" type="text">
                </div>
              </div>
              <div class="col col-md-6">
                <div class="row">
                  Experience:
                </div>
                <div class="row">
                  <input id="experienceInput" type="text">
                </div>
              </div>
            </div>
          </div>
          <!--#####################-Money and Gold-#####################-->
          <div class="col col-md-3">
            <div class="row">
              Wealth
            </div>
            <div class="row">
              <div class="input-group">
                <div class="input-group-prepend">
                  <label for="copperInput" class="input-group-text">Copper </label>
                  <input id="copperInput" class="form-control" aria-label="With textarea"></input>
                </div>
                <div class="input-group-prepend">
                  <label class="input-group-text" for="silverInput">Silver </label>
                  <input id="silverInput" class="form-control" aria-label="With textarea"></input>
                </div>
                <div class="input-group-prepend">
                  <label for="ElectrumInput" class="input-group-text">Electrum </label>
                  <input id="ElectrumInput" class="form-control" aria-label="With textarea"></input>
                </div>
                <div class="input-group-prepend">
                  <label class="input-group-text" for="GoldInput">Gold </label>
                  <input id="GoldInput" class="form-control" aria-label="With textarea"></input>
                </div>
                <div class="input-group-prepend">
                  <label class="input-group-text" for="PlatinumInput">Platinum </label>
                  <input id="PlatinumInput" class="form-control" aria-label="With textarea"></input>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--#####################-Ability Section-#####################-->
        <div class="form-group row top-div pb-2">
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-5 m-0 p-0 text-right">
                Strength <button id="statRoll"><i class="fas fa-dice"></i></button>
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" id="strRollmod" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" id="strRollResult" class="form-control input-sm">
              </div>
            </div>
          </div>
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-5 m-0 p-0 text-right">
                Dexterity<button id="statRoll"><i class="fas fa-dice"></i></button>
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
            </div>
          </div>
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-6 m-0 p-0 text-right">
                Constitution<button id="statRoll"><i class="fas fa-dice"></i></button>
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
            </div>
          </div>
        </div>
        <div class="form-group row top-div pb-2">
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-5 m-0 p-0 text-right">
                Intelligence<button id="statRoll"><i class="fas fa-dice"></i></button>
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
            </div>
          </div>
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-5 m-0 p-0 text-right">
                Wisdom<button id="statRoll"><i class="fas fa-dice"></i></button>
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
              <div class="col-md-2 m-0 p-0">
                <input type="number" class="form-control input-sm">
              </div>
            </div>
          </div>
          <div class="col col-md-4">
            <div class="row">
              <div class="col-md-5"> </div>
              <div class="col-md-2">Ability</div>
              <div class="col-md-2">Mod</div>
              <div class="col-md-2">Total</div>
            </div>
            <div class="row">
              <div class="col-md-5 m-0 p-0 text-right">
